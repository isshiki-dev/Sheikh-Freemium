{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Zebra-CoT Sample Schema",
  "description": "Schema for Visual Chain of Thought reasoning samples",
  "type": "object",
  "required": ["id", "category", "subcategory", "question", "reasoning_steps", "answer"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique sample identifier",
      "pattern": "^[a-z0-9_-]+$"
    },
    "category": {
      "type": "string",
      "enum": ["scientific", "visual_2d", "visual_3d", "logic_games"]
    },
    "subcategory": {
      "type": "string",
      "description": "Specific task type within category"
    },
    "question": {
      "type": "string",
      "description": "Problem statement or question",
      "minLength": 10
    },
    "input_images": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "description"],
        "properties": {
          "path": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "reasoning_steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["step", "type", "content"],
        "properties": {
          "step": {
            "type": "integer",
            "minimum": 1
          },
          "type": {
            "type": "string",
            "enum": ["text", "image", "interleaved"]
          },
          "content": {
            "type": "string",
            "description": "Text explanation for this step"
          },
          "image_path": {
            "type": "string",
            "description": "Path to generated visual for this step"
          },
          "intermediate_result": {
            "type": "string",
            "description": "Intermediate conclusion from this step"
          }
        }
      }
    },
    "answer": {
      "type": "string",
      "description": "Final answer or solution"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "difficulty": {
          "type": "string",
          "enum": ["easy", "medium", "hard"]
        },
        "source": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
